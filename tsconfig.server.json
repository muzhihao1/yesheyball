{
  "compilerOptions": {
    "outDir": "dist/server",
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "server/devServer.ts",
    "server/vite.ts"
  ]
}
