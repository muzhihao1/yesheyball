{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "importsNotUsedAsValues": "remove"
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "client",
    "dist",
    "node_modules"
  ]
}
