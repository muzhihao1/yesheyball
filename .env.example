# Core database connection for Drizzle ORM
DATABASE_URL="postgres://user:password@host:5432/database"

# Express session secret used to encrypt cookies
SESSION_SECRET="replace-with-strong-random-string"

# Optional: restrict sign-in to these email addresses (comma separated)
# AUTH_ALLOWED_EMAILS="coach@example.com,player@example.com"

# Optional: require this access code during login
# AUTH_ACCESS_CODE="shared-login-code"

# Optional: disable auth and auto-login with a demo user (default = true)
# AUTH_DISABLED="false"   # set to false to REQUIRE login
# AUTH_DISABLED_EMAIL="demo@local.test"
# AUTH_DISABLED_USER_ID="demo-user"

# OpenAI API key for AI-driven feedback features
OPENAI_API_KEY="sk-..."

# Required when deploying to Vercel Blob for media uploads
# BLOB_READ_WRITE_TOKEN="vercel-blob-token"
